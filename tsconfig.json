{
    "compilerOptions": {
        "outDir": "dist/",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es2015",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "jsxFactory": "createCell",
        "lib": ["dom", "es2015", "es2019.array", "es2019.object"]
    },
    "include": ["./source/**/*"]
}
