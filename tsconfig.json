{
    "compilerOptions": {
        "outDir": "dist/",
        "target": "ES2017",
        "checkJs": true,
        "allowJs": true,
        "declaration": true,
        "module": "ES2022",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "useDefineForClassFields": true,
        "jsx": "react-jsx",
        "jsxImportSource": "dom-renderer",
        "skipLibCheck": true,
        "lib": ["ES2022", "DOM"]
    },
    "include": ["source/**/*", "eslint.config.ts"],
    "typedocOptions": {
        "name": "WebCell",
        "excludeExternals": true,
        "excludePrivate": true,
        "readme": "./ReadMe.md",
        "plugin": ["typedoc-plugin-mdn-links"],
        "customCss": "./table.css"
    }
}
