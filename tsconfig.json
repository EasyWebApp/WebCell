{
    "compilerOptions": {
        "outDir": "dist/",
        "target": "ES2017",
        "checkJs": true,
        "declaration": true,
        "module": "ES2022",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "useDefineForClassFields": true,
        "jsx": "react-jsx",
        "jsxImportSource": "dom-renderer",
        "skipLibCheck": true,
        "lib": ["ES2022", "DOM"]
    },
    "include": ["source/**/*", "*.ts"],
    "typedocOptions": {
        "name": "WebCell",
        "excludeExternals": true,
        "excludePrivate": true,
        "readme": "./ReadMe.md",
        "plugin": ["typedoc-plugin-mdn-links"],
        "highlightLanguages": [
            "html",
            "css",
            "json",
            "js",
            "tsx",
            "shell",
            "diff"
        ],
        "customCss": "./guide/table.css"
    }
}
