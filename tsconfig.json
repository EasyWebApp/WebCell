{
    "compilerOptions": {
        "outDir": "dist/",
        "target": "ES2017",
        "declaration": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "useDefineForClassFields": true,
        "jsx": "react-jsx",
        "jsxImportSource": "dom-renderer",
        "skipLibCheck": true,
        "lib": ["ES2022", "DOM"]
    },
    "include": ["source/**/*"],
    "typedocOptions": {
        "name": "WebCell",
        "excludeExternals": true,
        "excludePrivate": true,
        "readme": "./ReadMe.md",
        "plugin": ["typedoc-plugin-mdn-links"]
    }
}
