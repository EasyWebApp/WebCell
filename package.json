{
  "name": "web-cell",
  "version": "0.9.8",
  "description": "Light-weight Web Components engine based on ECMAScript 6+ with MVVM support",
  "keywords": [
    "WebApp",
    "Web-component",
    "SPA",
    "ECMAScript",
    "MVVM"
  ],
  "author": "shiy007@qq.com",
  "license": "LGPL-3.0",
  "homepage": "https://web-cell.tk/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EasyWebApp/WebCell.git"
  },
  "bugs": {
    "url": "https://github.com/EasyWebApp/WebCell/issues"
  },
  "browser": "dist/web-cell.js",
  "directories": {
    "lib": "source",
    "doc": "docs",
    "test": "test"
  },
  "engines": {
    "node": "^6.5.0"
  },
  "scripts": {
    "lint": "eslint --fix ./source/ ./test/",
    "pack": "amd-bundle source/WebCell dist/web-cell",
    "test": "mocha --exit",
    "debug": "mocha --inspect-brk",
    "build": "npm run lint  &&  npm run pack  &&  npm test",
    "prepublishOnly": "npm run build",
    "precommit": "npm run build  &&  esdoc  &&  git add .",
    "start": "web-server docs/ -o"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@webcomponents/webcomponentsjs": "^2.1.3",
    "amd-bundle": "^1.6.0",
    "esdoc": "^1.1.0",
    "esdoc-external-webapi-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.6.0",
    "husky": "^0.14.3",
    "jsdom": "^12.0.0",
    "koapache": "^1.0.4",
    "mocha": "^5.2.0",
    "node-fetch": "^2.2.0",
    "puppeteer-browser": "^0.3.4",
    "should": "^13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "^6.3.4"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
