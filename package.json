{
  "name": "web-cell",
  "version": "1.0.0-alpha.0",
  "description": "Light-weight Web Components engine (with MVVM support) based on ECMAScript 2018 & Decorator proposal",
  "keywords": [
    "WebApp",
    "Web-component",
    "SPA",
    "MVVM",
    "ECMAScript",
    "decorator"
  ],
  "author": "shiy2008@gmail.com",
  "license": "LGPL-3.0",
  "homepage": "https://web-cell.tk/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EasyWebApp/WebCell.git"
  },
  "bugs": {
    "url": "https://github.com/EasyWebApp/WebCell/issues"
  },
  "main": "dist/web-cell.js",
  "browser": "dist/web-cell.min.js",
  "directories": {
    "lib": "source",
    "doc": "docs",
    "test": "test"
  },
  "engines": {
    "node": "^6.3.0"
  },
  "scripts": {
    "lint": "eslint --fix source/ test/**/*.test.js",
    "pack": "amd-bundle source/WebCell dist/web-cell -m",
    "pack-patch": "babel source/DOM-polyfill.js -o dist/polyfill.js",
    "pack-test": "amd-bundle test/Component/source/cell-test test/Component/dist/cell-test",
    "pack-input": "amd-bundle test/Component/source/cell-input test/Component/dist/cell-input",
    "check": "npm run pack  &&  npm run pack-test  &&  npm run pack-input  &&  mocha test/**/*.test.js",
    "test": "npm run check -- --exit",
    "debug": "npm run check -- --inspect-brk",
    "build": "npm run lint  &&  npm run pack-patch  &&  esdoc  &&  npm test",
    "prepublishOnly": "npm run build",
    "document": "esdoc",
    "start": "esdoc  &&  web-server docs/ -o"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build  &&  git add ."
    }
  },
  "dependencies": {
    "dom-renderer": "^0.8.0"
  },
  "peerDependencies": {
    "@babel/polyfill": "^7.2.5",
    "@webcomponents/webcomponentsjs": "^2.2.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "@webcomponents/webcomponentsjs": "^2.2.7",
    "amd-bundle": "^1.7.5",
    "babel-eslint": "^10.0.1",
    "babel-plugin-inline-import": "^3.0.0",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-external-webapi-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.14.1",
    "husky": "^1.3.1",
    "jsdom": "^13.2.0",
    "koapache": "^1.0.5",
    "mocha": "^6.0.1",
    "puppeteer-browser": "^0.3.7",
    "should": "^13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "^7.2.4"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "babel-plugin-inline-import",
        {
          "extensions": [
            ".html",
            ".css",
            ".json"
          ]
        }
      ],
      [
        "@babel/plugin-proposal-decorators",
        {
          "decoratorsBeforeExport": true
        }
      ]
    ]
  }
}
