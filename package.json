{
  "name": "web-cell",
  "version": "1.2.0",
  "description": "Light-weight Web Components framework (with MVVM support) based on ECMAScript 2018 & Decorator proposal",
  "keywords": [
    "WebApp",
    "Web-component",
    "SPA",
    "MVVM",
    "ECMAScript",
    "decorator"
  ],
  "author": "shiy2008@gmail.com",
  "license": "LGPL-3.0",
  "homepage": "https://web-cell.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EasyWebApp/WebCell.git"
  },
  "bugs": {
    "url": "https://github.com/EasyWebApp/WebCell/issues"
  },
  "module": "source/index.js",
  "main": "dist/web-cell.js",
  "browser": "dist/web-cell.min.js",
  "directories": {
    "lib": "source",
    "doc": "docs",
    "test": "test"
  },
  "engines": {
    "node": "^6.3.0"
  },
  "scripts": {
    "lint": "eslint --fix source/ test/**/*.test.js",
    "pack": "amd-bundle source/index dist/web-cell -m",
    "pack-test": "cd test/Component/  &&  web-cell pack",
    "check": "npm run pack  &&  npm run pack-test  &&  mocha test/**/*.test.js",
    "test": "npm run check -- --exit",
    "debug": "npm run check -- --inspect-brk --no-timeouts",
    "build": "npm run lint  &&  esdoc  &&  npm test",
    "prepublishOnly": "npm run build",
    "docs": "esdoc",
    "start": "esdoc  &&  web-server docs/ -o"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build  &&  git add ."
    }
  },
  "dependencies": {
    "dom-renderer": "^1.0.0-beta"
  },
  "peerDependencies": {
    "@babel/polyfill": "^7.4.4",
    "@webcomponents/webcomponentsjs": "^2.2.10"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "@webcomponents/webcomponentsjs": "^2.2.10",
    "amd-bundle": "^1.7.8",
    "babel-eslint": "^10.0.1",
    "babel-plugin-inline-import": "^3.0.0",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-external-webapi-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.16.0",
    "husky": "^2.3.0",
    "jsdom": "^15.1.0",
    "koapache": "^1.0.6",
    "mocha": "^6.1.4",
    "puppeteer-browser": "^0.3.8",
    "should": "^13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "^7.3.2",
    "web-cell-cli": "^1.0.0-beta"
  }
}
