{
    "name": "web-cell",
    "version": "2.0.0-alpha.2",
    "description": "Web Components engine based on JSX & TypeScript",
    "keywords": [
        "web",
        "component",
        "engine",
        "jsx",
        "typescript"
    ],
    "license": "AGPL-3.0",
    "author": "shiy2008@gmail.com",
    "homepage": "https://web-cell.dev/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/WebCell.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/WebCell/issues"
    },
    "module": "source/index.ts",
    "dependencies": {
        "snabbdom": "^0.7.3"
    },
    "devDependencies": {
        "@types/jest": "^24.0.18",
        "@types/puppeteer-core": "^1.9.0",
        "@typescript-eslint/parser": "^2.3.0",
        "@webcomponents/webcomponentsjs": "^2.2.10",
        "eslint": "^6.3.0",
        "eslint-config-prettier": "^6.1.0",
        "eslint-plugin-prettier": "^3.1.1",
        "fs-match": "^1.3.5",
        "husky": "^3.0.5",
        "jest": "^24.9.0",
        "lint-staged": "^9.2.5",
        "parcel-bundler": "^1.12.3",
        "prettier": "^1.18.2",
        "puppeteer-core": "^1.20.0",
        "ts-jest": "^24.1.0",
        "typescript": "^3.6.3"
    },
    "scripts": {
        "lint": "lint-staged",
        "install": "app-find chrome -c",
        "pack-test": "cd test/  &&  rm -rf dist/  &&  parcel build source/index.ts",
        "test": "npm run pack-test  &&  jest --forceExit"
    },
    "lint-staged": {
        "source/**/*.{ts,tsx}": [
            "eslint --fix",
            "git add"
        ],
        "*.{js,ts,tsx}": [
            "eslint --fix --rule 'require-atomic-updates: 1'",
            "git add"
        ],
        "*.{html,md,json,yml}": [
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint",
            "pre-push": "npm test"
        }
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4
    }
}
