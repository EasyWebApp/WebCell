{
    "name": "web-cell",
    "version": "2.0.0-beta.1",
    "description": "Web Components engine based on JSX & TypeScript",
    "keywords": [
        "web",
        "component",
        "engine",
        "jsx",
        "typescript"
    ],
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "homepage": "https://web-cell.dev/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/WebCell.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/WebCell/issues"
    },
    "module": "source/index.ts",
    "main": "dist/index.js",
    "browser": "dist/index.js",
    "types": "dist/index.d.ts",
    "devDependencies": {
        "@types/jest": "^24.0.18",
        "@types/jsdom": "^12.2.4",
        "@types/puppeteer-core": "^1.9.0",
        "@typescript-eslint/parser": "^2.3.2",
        "@webcomponents/webcomponentsjs": "^2.3.0",
        "eslint": "^6.5.1",
        "eslint-config-prettier": "^6.1.0",
        "eslint-plugin-prettier": "^3.1.1",
        "fs-match": "^1.3.5",
        "husky": "^3.0.8",
        "jest": "^24.9.0",
        "jsdom": "^15.1.1",
        "lint-staged": "^9.4.1",
        "open-cli": "^5.0.0",
        "parcel-bundler": "^1.12.3",
        "parcel-plugin-text": "^0.9.5",
        "prettier": "^1.18.2",
        "puppeteer-core": "^1.20.0",
        "snabbdom": "^0.7.3",
        "ts-jest": "^24.1.0",
        "typedoc": "^0.15.0",
        "typescript": "^3.6.3"
    },
    "scripts": {
        "lint": "lint-staged",
        "set-chrome": "app-find chrome -c",
        "pack-test": "cd test/  &&  rm -rf dist/  &&  parcel build source/index.ts",
        "test": "npm run lint  &&  npm run pack-test  &&  jest --forceExit",
        "debug": "npm run pack-test  &&  open-cli test/index.html",
        "pack-type": "tsc  &&  rm -f dist/*.{js,map}",
        "pack-dist": "parcel build source/index.ts --global WebCell",
        "copy-type": "cp type/index.d.ts dist/type.d.ts",
        "pack-docs": "typedoc --name WebCell --out docs/ source/",
        "build": "npm run pack-type  &&  npm run pack-dist  &&  npm run copy-type  &&  npm run pack-docs",
        "help": "npm run pack-docs  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    },
    "lint-staged": {
        "source/**/*.{ts,tsx}": [
            "eslint --fix",
            "git add"
        ],
        "*.{js,ts,tsx}": [
            "eslint --fix --rule 'require-atomic-updates: 1'",
            "git add"
        ],
        "*.{html,md,css,json,yml}": [
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint",
            "pre-push": "npm test  &&  npm run build"
        }
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4
    },
    "parcel-plugin-text": {
        "extensions": [
            "css"
        ]
    }
}
