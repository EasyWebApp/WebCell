{
    "name": "web-cell",
    "version": "2.3.0",
    "description": "Web Components engine based on JSX & TypeScript",
    "keywords": [
        "web",
        "component",
        "engine",
        "jsx",
        "typescript"
    ],
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "homepage": "https://web-cell.dev/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/WebCell.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/WebCell/issues"
    },
    "main": "dist/index.js",
    "source": "source/index.ts",
    "types": "dist/index.d.ts",
    "dependencies": {
        "web-utility": "^2.6.0"
    },
    "peerDependencies": {
        "@webcomponents/webcomponentsjs": "^2.5.0",
        "core-js": "^3.16.0",
        "jsdom": "^16.6.0"
    },
    "devDependencies": {
        "@types/core-js": "^2.5.4",
        "@types/jest": "^26.0.24",
        "@types/jsdom": "^16.2.13",
        "@typescript-eslint/eslint-plugin": "^4.28.5",
        "@typescript-eslint/parser": "^4.28.5",
        "element-internals-polyfill": "0.1.43",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^7.0.1",
        "jest": "^27.0.6",
        "lint-staged": "^11.1.1",
        "open-cli": "^7.0.0",
        "parcel-bundler": "^1.12.5",
        "prettier": "^2.3.2",
        "snabbdom": "^2.1.0",
        "ts-jest": "^27.0.4",
        "typedoc": "^0.21.5",
        "typescript": "^4.3.5"
    },
    "scripts": {
        "prepare": "husky install",
        "lint": "lint-staged",
        "test": "npm run lint  &&  jest",
        "pack-type": "tsc  &&  rm -f dist/*.{js,map} dist/**/*.{js,map}",
        "pack-dist": "parcel build source/index.ts --global WebCell",
        "pack-docs": "rm -rf docs/  &&  typedoc source/",
        "build": "rm -rf dist/  &&  npm run pack-type  &&  npm run pack-dist  &&  npm run pack-docs",
        "start": "npm run pack-docs  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    },
    "lint-staged": {
        "source/**/*.{ts,tsx}": "eslint --fix",
        "*.{js,ts,tsx}": "eslint --fix --rule 'require-atomic-updates: 1'",
        "*.{html,md,css,json,yml,js,ts,tsx}": "prettier --write"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "jest": {
        "testEnvironment": "jsdom",
        "preset": "ts-jest/presets/js-with-ts",
        "globals": {
            "ts-jest": {
                "tsconfig": "test/tsconfig.json",
                "isolatedModules": true
            }
        },
        "testPathIgnorePatterns": [
            "/node_modules/",
            "/MobX/"
        ],
        "transformIgnorePatterns": []
    }
}
